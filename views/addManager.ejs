<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Manager</title>
</head>
<body>
    <h1>Add Manager (MongoDB)</h1>

    <!-- Display any validation errors -->
    <% if (errors.length > 0) { %>
    <ul style="color: red;">
        <% errors.forEach(error => { %>
        <li><%= error %></li>
        <% }) %>
    </ul>
    <% } %>

    <form action="/managers/add" method="POST">
        <label for="_id">Manager ID:</label>
        <input type="text" name="_id" id="_id" required><br>

        <label for="name">Name:</label>
        <input type="text" name="name" id="name" required><br>

        <label for="salary">Salary:</label>
        <input type="number" name="salary" id="salary" required><br>

        <button type="submit">Add Manager</button>
    </form>
    <br>
    <a href="/managers">Back to Managers</a>
</body>
</html>